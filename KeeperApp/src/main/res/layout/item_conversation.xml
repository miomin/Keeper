<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@drawable/list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">


    <scu.miomin.com.keeper.myview.XCRoundImageView
        android:id="@+id/ivHead"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ivHead"
        android:text="Miomin"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivHead"
        android:layout_alignLeft="@id/tvName"
        android:layout_marginRight="30dp"
        android:maxHeight="27dp"
        android:text="你吃了吗？"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvName"
        android:text="2015/4/25"
        android:textColor="@color/grey"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/tvDate"
        android:layout_alignTop="@+id/tvMsg"
        android:layout_marginRight="15dp"
        android:src="@drawable/point_blue"
        android:visibility="invisible" />

</RelativeLayout>